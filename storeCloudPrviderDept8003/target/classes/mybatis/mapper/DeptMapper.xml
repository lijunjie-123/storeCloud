<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alibaba.pointmng.dept.dao.DeptDao" >
    <resultMap id="BaseResultMap" type="system.dept.model.Dept" >
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="db_source" property="dbSource" jdbcType="VARCHAR" />
    </resultMap>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT * FROM dept where id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="findAll"   resultMap="BaseResultMap">
        SELECT * FROM dept
    </select>

    <insert id="addDept" parameterType="system.dept.model.Dept" >
        insert into dept (id, name, db_source)values (#{id,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR}, #{dbSource,jdbcType=VARCHAR})
    </insert>



</mapper>